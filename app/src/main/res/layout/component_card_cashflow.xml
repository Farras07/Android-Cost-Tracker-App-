<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp"
    android:layout_marginBottom="8sp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp">
        <LinearLayout
            android:id="@+id/leftSideCard"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            android:padding="10sp"
            android:orientation="vertical"
            android:background="@drawable/right_border">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/cardCashlowIcon"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:src="@drawable/wallet"/>

                <TextView
                    android:id="@+id/cardCashlowCategoryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textStyle="bold"
                    android:text="Gaji"
                    android:textColor="@color/black"
                    android:layout_marginTop="5sp"
                    android:textAlignment="center"
                    android:textSize="8sp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/rightSideCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:layout_marginBottom="5sp">
                <TextView
                    android:id="@+id/cardCashlowTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="Income"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/cardCashlowDescText"
                        android:layout_width="150sp"
                        android:layout_height="match_parent"
                        android:textSize="10sp"
                        android:text="Bayar Kos"
                        android:textStyle="bold"
                        android:layout_marginRight="30sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/cardCashlowTotalText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="+ Rp. 2000000"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:textColor="@color/greenMoney"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>